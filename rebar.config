%% -*- mode: erlang -*-
{erl_opts, [debug_info,
            warn_unused_vars,
            warnings_as_errors,
            warn_export_all,
            warn_shadow_vars,
            warn_unused_import,
            warn_unused_function,
            warn_bif_clash,
            warn_unused_record,
            warn_deprecated_function,
            warn_obsolete_guard,
            strict_validation,
            warn_export_vars,
            warn_exported_vars,
            warn_untyped_record,
            {platform_define, "^(2|3)", recent_otp}]}.

{deps, []}.
{shell, [{apps, [prometheus]}]}.

{xref_extra_paths, []}.
{xref_checks, [undefined_function_calls,undefined_functions,locals_not_used,
               deprecated_function_calls,deprecated_functions]}.

{profiles, []}.
